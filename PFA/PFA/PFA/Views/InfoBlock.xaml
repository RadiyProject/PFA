                FontAttributes="Bold"
                TextColor="#305C55" 
                HorizontalTextAlignment="Center"
            />
            <ScrollView Margin="10,17,10,0">
                <StackLayout>
                    <Grid>
                        <Rectangle Fill="#D3A354"
                             Stroke="#9E6C1A"
                             StrokeThickness="2"
                             WidthRequest="320"
                             HeightRequest="25"
                             HorizontalOptions="Center" />

                        <Label Text="Общее" 
                               FontSize="20"
                               TextColor="#865318"
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="CenterAndExpand">
                        </Label>
                    </Grid>
                    <StackLayout>
                        <Button HorizontalOptions="CenterAndExpand"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="320"
                                HeightRequest="45"
                                BackgroundColor="#F0EEEE"
                                BorderColor="#305C55"
                                BorderWidth="1"
                                CornerRadius="8"
                                Text="5 советов как тратить меньше денег"
                                TextColor="#305C55"
